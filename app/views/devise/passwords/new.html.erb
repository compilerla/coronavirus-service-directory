<% content_for :header do %>
  <%= link_to "Go back", new_user_session_path, class: "go-back" %>
  <h1 class="page-title">Forgotten password</h1>
  <p class="lede">You can reset your password by email</p>
<% end %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

  <div class="field half">
    <%= f.label :email, class: "field__label" %>
    <%= f.email_field :email, required: true, class: "field__input" %>
  </div>

    <%= f.button "Request reset", class: "button" %>
<% end %>