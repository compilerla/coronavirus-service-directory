<% content_for :header do %>
  <%= link_to "Go back", root_path, class: "go-back" %>
  <h1 class="page-title">Log in</h1>
<% end %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field half">
    <%= f.label :email, class: "field__label" %>
    <%= f.text_field :email, class: "field__input" %>
  </div>

  <div class="field half">
    <%= f.label :password, class: "field__label" %>
    <%= f.text_field :password, class: "field__input" %>
  </div>

  <div class="checkbox">
    <%= f.check_box :remember_me, class: "checkbox__input" %>
    <%= f.label :remember_me, "Remember me on this computer", class: "checkbox__label" %>
  </div>

  <%= f.button "Log in", class: "button" %>

<% end %>

<%= render "devise/shared/links" %>
