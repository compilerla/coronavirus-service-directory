<% content_for :header do %>
    <div class="two-thirds">
        <ul class="breadcrumbs">
            <li class="breadcrumbs__crumb">
                <a href="https://www.camden.gov.uk/" lass="breadcrumbs__link">Home</a>
            </li>
            <li class="breadcrumbs__crumb">
                <a href="https://www.camden.gov.uk/COVID-19" lass="breadcrumbs__link">Coronavirus</a>
            </li>
            <li class="breadcrumbs__crumb">
                <%= link_to "Get self-isolation help", root_path %>
            </li>
            <li class="breadcrumbs__crumb">
                Add new
            </li>
        </ul>
        <h1 class="page-title">Add new service</h1>
    </div>
<% end %>

<%= form_for @new_service, local: true, :html => { class: "two-thirds" } do |f| %>

    <% if @new_service.errors.any? %>
        <ul>
            <% @new_service.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    <% end %>

    <h2>About your organisation or group</h2>

    <div class="field">
        <%= f.label :name, class: "field__label" %>
        <%= f.text_field :name, class: "field__input" %>
    </div>

    <div class="field">
        <%= f.label :description, class: "field__label" %>
        <%= f.text_area :description, class: "field__input" %>
    </div>

    <fieldset class="checkboxes field">
        <legend>What can you help with</legend>
        <p>Choose all that apply</p>
        <%= f.collection_check_boxes(:category_ids, Category.all, :id, :label)  do |b| %>
            <div class="checkbox">
                <%= b.check_box class: "checkbox__input" %>
                <%= b.label class: "checkbox__label" %>
            </div>
        <% end %>
    </fieldset>

    <h2>How people can contact you</h2>
    <p>Provide at least one way for the public to get in touch with you.</p>

    <div class="field">
        <%= f.label :url, class: "field__label" %>
        <%= f.text_field :url, class: "field__input" %>
    </div>

    <div class="field">
        <%= f.label :email, class: "field__label" %>
        <%= f.email_field :email, class: "field__input" %>
    </div>

    <div class="field">
        <%= f.label :phone, class: "field__label" %>
        <%= f.text_field :phone, class: "field__input" %>
    </div>

    <h2>Where you're located</h2>
    <p>Where can the public access your services? If you cover more than one location, give your most popular location. If you cover the entire borough, leave this blank.</p>

    <div class="field">
        <%= f.label :street_address, class: "field__label" %>
        <%= f.text_field :street_address, class: "field__input" %>
    </div>

    <div class="field half">
        <%= f.label :postcode, class: "field__label" %>
        <%= f.text_field :postcode, class: "field__input" %>
    </div>


    <h2>Your own details</h2>
    <p>Give us either an email address, phone number or both, in case we need to contact you about this submission.</p>

    <div class="field">
        <%= f.label :caretaker_email, class: "field__label" %>
        <%= f.email_field :caretaker_email, class: "field__input" %>
    </div>

    <div class="field">
        <%= f.label :caretaker_phone, class: "field__label" %>
        <%= f.email_field :caretaker_phone, class: "field__input" %>
    </div>

    <%= f.button "Accept and send", class: "button" %>


<% end %>