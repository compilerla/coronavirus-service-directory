<%= form_with url: root_path, method: :get, local: true, class: "search" do |f| %>

    <div class="search__field">
        <%= f.label :category, "What kind of help?", class: "search__label" %>
        <%= f.collection_select :category, 
        Category.all, 
        :name, :label, {
            include_blank: "Everything",
            selected: params[:category]
        }, class: "search__select" %>
    </div>

    <div class="search__field">
        <%= f.label :postcode, "Enter a Buckinghamshire town or postcode", class: "search__label" %>
        <%= f.text_field :postcode, value: params[:postcode], placeholder: "eg. HP20 1UA", class: "search__input" %>
    </div>

    <%= f.submit (is_initial? ? "Search" : "Search again"), class: "button button--search" %>
<% end %>